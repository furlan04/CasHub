<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.fragment.HomepageStocksFragment">

    <!-- TITOLO -->
    <TextView
        android:id="@+id/textViewTitoli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/titoli_title"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BLOCCO GRAFICO + Nâ‚¬ M% -->
    <LinearLayout
        android:id="@+id/linearLayoutGraficoPortafoglio"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitoli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewRendimentoPortafoglio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portfolio_return"
            android:textAlignment="center" />
    </LinearLayout>

    <!-- ELENCO TITOLI -->
    <LinearLayout
        android:id="@+id/linearLayoutListaTitoli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutGraficoPortafoglio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textViewStock1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stock_name1" />

        <TextView
            android:id="@+id/textViewStock2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stock_name2" />

        <TextView
            android:id="@+id/textViewStock3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stock_name3" />
    </LinearLayout>

    <!-- BOTTONI AGGIUNGI / RIMUOVI -->
    <LinearLayout
        android:id="@+id/linearLayoutBottoni"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutListaTitoli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnAggiungiTitolo"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_stock"
            android:textAllCaps="false"
            android:textAppearance="@style/FontMainMedium" />

        <Button
            android:id="@+id/btnRimuoviTitolo"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/remove_stock"
            android:textAllCaps="false"
            android:textAppearance="@style/FontMainMedium" />
    </LinearLayout>

    <!-- SWITCH CAMBIO SCHERMATA -->
    <Switch
        android:id="@+id/switchSchermate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_label"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayoutBottoni"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
